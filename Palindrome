package simpleCharacterArrayBasedPalindromeTester;


/**
 * PalindromeTester - see task
 * 
 * @author   Artin Nouri, Malik Sonntag 
 * @version  21.05.2024
 *
 */
public class PalindromeTester {
    
    
    public boolean isPalindrome(char[] word){
        
        int front = 0;
        int back = word.length;
        
        // go from the beginning of the word till the mid
        while (word[front] == word[back] && front < back) {
            front++;
            back--;
        }
        
        return front >= back;
        
    }
    
    
}//class
