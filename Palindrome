public class PalindromeTester {

    
    
    public boolean isPalindrome(char[] word){
        
        for (int i = 0; i < word.length/2; i++) {
            int mirrored = word.length - i - 1;
            if (word[i]!=word[mirrored]) {
                return false;
            }
            
        }
        return true;
    }
}//class
